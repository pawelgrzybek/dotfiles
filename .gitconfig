[user]
  name = Pawel Grzybek
  email = pawelgrzybek@users.noreply.github.com
[color]
  ui = true
[push]
  followTags = true
	autoSetupRemote = true
[help]
  autocorrect = 1
[status]
  showUntrackedFiles = all
[core]
	fileMode = false
	editor = hx
    pager = delta
[pull]
	rebase = false
[init]
	defaultBranch = main
[rerere]
	enabled = true
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
	line-numbers = true
	side-by-side = true
	true-color = always
	features = collared-trogon
	line-numbers-left-style = black
	line-numbers-right-style = black
	line-numbers-zero-style = black
	syntax-theme = base16-256
	line-numbers-minus-style = red
    line-numbers-plus-style = green
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
